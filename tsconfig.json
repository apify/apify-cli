{
	"extends": "@apify/tsconfig",
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"lib": ["ES2022"],
		"allowJs": true,
		"rootDir": "src",
		"outDir": "dist",
		// For now we need this :(
		"skipLibCheck": true,
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"noImplicitOverride": true
	},
	"include": ["src"]
}
